<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<!-- log4j config -->

	<appender name="CONSOLE" class="org.apache.log4j.ConsoleAppender">
		<param name="Threshold" value="DEBUG"/>
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[vasap] %-5p [%d{yyyy-MM-dd HH:mm:ss.SSS}] %c{1}.%M(%L) | %m%n"/>
		</layout>
	</appender>

	<appender name="LOGFILE" class="org.apache.log4j.FileAppender">
		<param name="Threshold" value="DEBUG"/>
		<param name="File" value="${appDir}/vasap.log"/>
		<param name="Append" value="true"/>
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[vasap] [%t] %-5p [%d{yyyy-MM-dd HH:mm:ss.SSS}] %c{1}.%M(%L) | %m%n"/>
		</layout>
	</appender>

	<logger name="ch.jesc.vasap">
		<level value="DEBUG"/>
	</logger>





	<logger name="org.springframework">
		<level value="INFO"/>
	</logger>

	<logger name="org.springframework.test.jdbc.SimpleJdbcTestUtils">
		<level value="WARN"/>
	</logger>


	<logger name="org.apache">
		<level value="WARN" />
	</logger>

	<logger name="org.hibernate">
		<level value="WARN" />
	</logger>

	<!-- Pour logger le HQL -> DEBUG -->
	<logger name="org.hibernate.SQL">
		<level value="OFF" />
	</logger>

	<root>
		<level value="INFO"/>
		<appender-ref ref="LOGFILE"/>
		<appender-ref ref="CONSOLE"/>
	</root>

</log4j:configuration>

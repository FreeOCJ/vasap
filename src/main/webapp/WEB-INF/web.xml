<?xml version="1.0" encoding="UTF-8"?>
<web-app id="rcpers-eve" version="2.4"
		 xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		 xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">

	<display-name>VaSAp</display-name>

	<!-- log4j -->
	<context-param>
		<param-name>log4jConfigLocation</param-name>
		<param-value>file:${appDir}/log4j.xml</param-value>
	</context-param>
	<context-param>
		<param-name>log4jExposeWebAppRoot</param-name>
		<param-value>false</param-value>
	</context-param>
	<context-param>
		<param-name>log4jRefreshInterval</param-name>
		<param-value>1000</param-value>
	</context-param>
	<listener>
		<listener-class>org.springframework.web.util.Log4jConfigListener</listener-class>
	</listener>

	<!--
	<listener>
		<listener-class>org.springframework.web.context.request.RequestContextListener</listener-class>
	</listener>
	-->


	<!-- webapp.root : Utile pour que le CEI arrive a dÃ©ployer Adam et Facy
			dans le meme container -->
	<context-param>
		<param-name>webAppRootKey</param-name>
		<param-value>reporter.root</param-value>
	</context-param>

	<!-- Context spring -->
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>
			classpath:spring-core-entities.xml,
			classpath:spring-core-hibernate.xml,
			classpath:spring-core-dao.xml,
			classpath:spring-core-database.xml,
			classpath:spring-core-services.xml,
			classpath:spring-web-common.xml,
			classpath:spring-web-database.xml,
			/WEB-INF/spring-repo-common.xml
		</param-value>
	</context-param>
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>


	<filter>
		<filter-name>filterChainProxy</filter-name>
		<filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>filterChainProxy</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>


	<!-- Vaadin -->
	<context-param>
		<description>Vaadin production mode</description>
		<param-name>productionMode</param-name>
		<param-value>false</param-value>
	</context-param>

	<servlet>
		<servlet-name>ReporterServlet</servlet-name>
		<servlet-class>com.vaadin.server.VaadinServlet</servlet-class>
		<init-param>
			<description>Vaadin UI</description>
			<param-name>UI</param-name>
			<param-value>ch.jesc.vasap.app.RepoUI</param-value>
		</init-param>
	</servlet>

	<servlet-mapping>
		<servlet-name>ReporterServlet</servlet-name>
		<url-pattern>/*</url-pattern>
	</servlet-mapping>


	<!-- Welcome File List -->
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>

	<error-page>
		<error-code>500</error-code>
		<location>/errors/error500.jsp</location>
	</error-page>
	<error-page>
		<error-code>404</error-code>
		<location>/errors/error404.jsp</location>
	</error-page>
	<error-page>
		<error-code>403</error-code>
		<location>/errors/error403.jsp</location>
	</error-page>


	<!-- Session -->
	<session-config>
		<session-timeout>120</session-timeout>
	</session-config>

</web-app>

<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans
						http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

<!-- Fichiers de config des proprietes pour le DÃ©veloppeur -->
	<bean id="propertyConfigurer" class="net.ecozig.core.utils.PropFilesCheckerPlaceholderConfigurer">
		<property name="systemPropertiesModeName" value="SYSTEM_PROPERTIES_MODE_OVERRIDE"/>
		<property name="ignoreResourceNotFound" value="true"/>
		<property name="ignoreUnresolvablePlaceholders" value="false"/>
		<property name="locations">
			<list>
				<value>file:${appDir}/config/repo.properties</value>
				<value>file:${appDir}/config/repo-dev.properties</value>
			</list>
		</property>
	</bean>

	<bean id="rrd.location.dir" class="java.lang.String">
		<constructor-arg value="${rrd.location}"/>
	</bean>

	<bean id="emailSender" class="net.ecozig.core.mail.EmailSenderImpl" />

</beans>
